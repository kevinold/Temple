- content_for 'page_css' do
  :sass
    p.title
      margin: 10px 0 !important

    #content .form-area div.error-with-field
      input.textbox
        font-family: Georgia,Palatino,"Times New Roman",Times,serif
        font-size: 200%
        width: 100%

%h1= @sermon.new_record? ? 'New Sermon' : 'Edit Sermon'

- form_for [:admin, @sermon] do |f|
  .form-area
    %p.title
      %label Title
      = f.text_field :title, :class => 'textbox'
    %p.title
      %label Date
      = f.date_select :date, :class => 'textbox'
    %p.title
      %label Verses
      = f.text_field :verses, :class => 'textbox'
    %p.title
      %label Notes
      = f.text_area :notes, :class => 'textbox'
    %p.title
      %label Published
      = f.check_box :published, :class => 'textbox'
    
  %p.buttons
    - button_text = @sermon.new_record? ? 'Create' : 'Save Changes'
    = submit_tag button_text, :class => 'button'
    or
    = link_to 'Cancel', admin_sermons_url
