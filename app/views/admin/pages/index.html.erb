<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Permalink</th>
    <th>Body</th>
    <th>Published</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.title %></td>
    <td><%=h page.permalink %></td>
    <td><%=h page.body %></td>
    <td><%=h page.published %></td>
    <td><%= link_to 'Show', [:admin, page] %></td>
    <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
    <td><%= link_to 'Destroy', [:admin, page], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_admin_page_path %>
