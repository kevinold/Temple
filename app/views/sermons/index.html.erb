Sermons

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Podcast Filename</th>
    <th>Video Filename</th>
    <th>Published</th>
  </tr>
  <% for sermon in @sermons %>
    <tr>
      <td><%=h sermon.title %></td>
      <td><%=h sermon.description %></td>
      <td><%=h sermon.podcast_filename %></td>
      <td><%=h sermon.video_filename %></td>
      <td><%=h sermon.published %></td>
      <td><%= link_to "Show", sermon %></td>
      <td><%= link_to "Edit", edit_sermon_path(sermon) %></td>
      <td><%= link_to "Destroy", sermon, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Sermon", new_sermon_path %></p>
