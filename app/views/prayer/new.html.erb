<%= error_messages_for('prayer_handler') %>

<% form_for(:prayer_handler, :url => prayer_url, :html => { :class => 'prayer' }) do |f| %>
  <div>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>

	<div>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

	<div>
    <%= f.submit 'send' %>
	</div>
<% end %>
